<div class="mx-auto md:w-2/3 w-full">
  <h1 class="font-bold text-4xl"><%= @user.company.name %></h1>

  <h2 class="my-5">Users:</h2>

  <div class="my-5 w-full">
    <%= render template: "users/index" %>
  </div>

  <h2 class="my-5">Invitations:</h2>

  <% @invitations.each do |inv| %>
    <div class="bg-white p-6 rounded-lg shadow-lg flex flex-col gap-4 mx-auto my-5">
      <p class="text-xl font-semibold text-gray-800">
        <%= inv.email_address %>
      </p>
    </div>
  <% end %>

  <div>
    <%= link_to "Invite Users",
    new_invitation_path,
    class:
      "w-full sm:w-auto text-center rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white inline-block font-medium cursor-pointer" %>
  </div>
</div>
