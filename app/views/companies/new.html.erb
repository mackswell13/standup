<div class="mx-auto md:w-2/3 w-full">
  <h1 class="font-bold text-4xl">Create Company</h1>

  <%= form_with model: @company, class: "contents" do |form| %>
    <div class="my-5">
      <%= form.text_field :name, required: true, autofocus: true, placeholder: "Company Name", class: "block shadow-sm rounded-md border border-gray-400 focus:outline-blue-600 px-3 py-2 mt-2 w-full" %>
    </div>

    <div class="col-span-6 sm:flex sm:items-center sm:gap-4">
      <div class="inline">
        <%= form.submit "Create company", class: "w-full sm:w-auto text-center rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white inline-block font-medium cursor-pointer" %>
      </div>
    </div>
  <% end %>
</div>
